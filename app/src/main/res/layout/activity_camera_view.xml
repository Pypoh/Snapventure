<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraViewActivity"
    android:id="@+id/cameraLayout">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:src="@drawable/circle_yellow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_detect" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:src="@drawable/baseline_camera_black_24"
                android:translationZ="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/button_detect"
                app:layout_constraintEnd_toEndOf="@+id/button_detect"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/button_detect"
                app:layout_constraintTop_toTopOf="@+id/button_detect" />

            <Button
                android:id="@+id/button_detect"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/circle_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>


        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"
            app:cameraFlash="off"
            app:cameraJpegQuality="100">
        </com.otaliastudios.cameraview.CameraView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:src="@mipmap/ic_hint"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_hint"
            app:layout_constraintEnd_toEndOf="@+id/button_hint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/button_hint"
            app:layout_constraintTop_toTopOf="@+id/button_hint" />

        <Button
            android:id="@+id/button_hint"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>